<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_cinema2"
    tools:context=".activities.BookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFBF9">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phim: Kẻ trộm mặt trăng 4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phòng chiếu: R02"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Suất chiếu: 19:30 - 01/09/2024"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="2dp"
        android:text="MÀN HÌNH"
        android:textSize="7sp"
        android:textAlignment="center"
        android:background="#EF4712"/>

    <GridView
        android:id="@+id/gvSeats"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:numColumns="8"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAvailable"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/mint"/>

            <TextView
                android:id="@+id/txtAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghế trống"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTaken"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:backgroundTint="#7B8283"/>

            <TextView
                android:id="@+id/txtTaken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã bán"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSelected"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/green"/>

            <TextView
                android:id="@+id/txtSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang chọn"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="#FFFBF9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSeatsSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Ghế: A1, A2"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Tổng cộng: 140.000đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FA7C0E"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/light_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="Thanh toán"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/spinnerPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"
                    android:dropDownWidth="400dp"
                    android:backgroundTint="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:backgroundTint="#EF4712"/>
    </LinearLayout>

</LinearLayout>
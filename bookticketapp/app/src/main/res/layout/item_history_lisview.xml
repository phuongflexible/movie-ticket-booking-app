<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgMovie_history"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/poster_deadpool" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        
        <TextView
            android:id="@+id/txtMovieTitle_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phim"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtShowTime_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suất chiếu"/>

        <TextView
            android:id="@+id/txtCinema_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rạp"/>

        <TextView
            android:id="@+id/txtRoom_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng chiếu"/>

        <TextView
            android:id="@+id/txtSeatNumbers_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các ghế"/>

        <TextView
            android:id="@+id/txtTotalPrice_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginVertical="2dp"
            android:text="Tổng tiền"
            android:textSize="16sp"
            android:background="@color/lightBlue"/>

        <TextView
            android:id="@+id/txtCreatedTime_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian đặt"/>

        <TextView
            android:id="@+id/txtPaymentTime_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian thanh toán"/>

        <TextView
            android:id="@+id/txtPaymentMethod_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"/>
    </LinearLayout>

</LinearLayout>